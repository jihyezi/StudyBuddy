{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },  
    { "src": "public/**", "use": "@vercel/static" } 
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" }, 
    { "src": "/(.*)", "dest": "/public/$1" },    
    { "handle": "filesystem" },                  
    { "src": "/(.*)", "dest": "server.js" }      
  ],
  "rewrites": [
    { 
      "source": "/api/searchBook",
      "destination": "/api/searchBook.js"
    },
    {
      "source": "/api/searchPlace", 
      "destination": "/api/searchPlace.js"
    }
  ] 
}