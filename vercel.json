{
    "version": 2,
    "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,HEAD,OPTIONS" }
      ]
    }
  ],
    "builds": [
      { "src": "server.js", "use": "@vercel/node" },  
      { "src": "public/**", "use": "@vercel/static" } 
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server.js" }, 
      { "src": "/(.*)", "dest": "/public/$1" },    
      { "handle": "filesystem" },                  
      { "src": "/(.*)", "dest": "server.js" }      
    ]
}